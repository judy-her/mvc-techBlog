{{!-- Blogs on this page --}}

<!-- Loop over each object in the projects array -->
{{#each blogs as |blog| }}
<div class="row mb-4 text-light">
  <div class="col-md-5">
    <h2 >
      <!-- Call helper function with triple brackets to render the emoji span as HTML -->
      <a  class="link-underline link-underline-opacity-0" href="/blog/{{blog.id}}">{{blog.title}} </a>
    </h2>
    <p>Created by {{blog.user.name}} on {{format_date blog.date_created}}</p>
  </div>
  <div class="col-md-7">
    <p>
      {{blog.description}}
    </p>
  </div>
</div>
{{/each}}
  

 
  
