        <form class="col-7 py-1 mb-3 mt-2 container justify-content-center flex-wrap">
            <div class="text-center">
              <h1 class="text-light">Sign Up</h1>
            </div>
            <!-- Name input -->
            <div class="form-outline mb-4">
              <input type="text"  class="form-control" />
              <label id="name-signup" class="form-label text-light" for="name-signup"
                >Name</label>
            </div>

            <!-- email input -->
            <div class="form-outline mb-4">
              <input type="text"  class="form-control" />
              <label id="email-signup" class="form-label text-light" for="email-signup"
                >Email</label>
            </div>
        
            <!-- Password input -->
            <div class="form-outline mb-4">
              <input type="password" id="form2Example2" class="form-control" />
              <label id="password-signup" class="form-label text-light" for="password-signup"
                >Password</label >
            </div>
        
            <!-- 2 column grid layout for inline styling -->
            <div class="row mb-4">
