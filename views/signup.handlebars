                <!-- Checkbox -->
                <div class="form-check">
                  <input
                    class="form-check-input"
                    type="checkbox"
                    value=""
                    id="form2Example31"
                    checked
                  />
                  <label class="form-check-label text-light" for="form2Example31">
                    Remember me
                  </label>
                </div>
              </div>
        
            <!-- Submit button -->
            <button type="button" class="btn btn-primary btn-block mb-4">
              Submit
            </button>
        
            <!-- Register buttons -->
            <div class="text-center text-light">
              <p>Already a member? <a href="./login.html">Sign in</a></p>
            </div>
