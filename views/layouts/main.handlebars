  </head>
  <body class="bg-dark">
    <main class="d-flex min-vh-100">
        
      <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
   
        <div class="container-fluid">
          <div class="collapse navbar-collapse" id="navbarCollapse">
            
            <ul class="navbar-nav me-auto mb-2 mb-md-0" id="navbar-collpsed-items">
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Dashboard</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="#">Login</a>
              </li>
              <li class="nav-item">
                <a class="nav-link disabled" aria-disabled="true">Logout</a>
              </li>
            </ul>
            
          </div>
        </div>
    <!-- hamburger menu -->
        <div class="pos-f-t">
            <div class="collapse" id="navbar-collpsed-items">
              <div class="bg-dark p-4">
                <h5 class="text-white h4">Collapsed content</h5>
                <span class="text-muted">Toggleable via the navbar brand.</span>
              </div>
            </div>
            <nav class="navbar navbar-dark bg-dark">
              <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
              </button>
            </nav>
          </div>
      </nav>

      <header class="py-3 mb-5 mt-5 col-3 d-flex flex-wrap justify-content-center">
        <!-- <div class=" d-flex flex-wrap justify-content-center"> -->
          <h1 class="bg-dark text-light">TechBlog</h1>
        
      </header>

      <!-- Login  -->
      <form class="col-7 py-3 mb-5 mt-5 container justify-content-center flex-wrap">
        <div>
          <h1 class="text-light">Login</h1>
        </div>
        <!-- Email input -->
        <div class="form-outline mb-4">
          <input type="email" id="form2Example1" class="form-control" />
          <label class="form-label text-light" for="form2Example1"
            >Email address</label
          >
        </div>

        <!-- Password input -->
        <div class="form-outline mb-4">
          <input type="password" id="form2Example2" class="form-control" />
          <label class="form-label text-light" for="form2Example2"
            >Password</label
          >
        </div>

        <!-- 2 column grid layout for inline styling -->
        <div class="row mb-4">
          <div class="col d-flex justify-content-center">
            <!-- Checkbox -->
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value=""
                id="form2Example31"
                checked
              />
              <label class="form-check-label text-light" for="form2Example31">
                Remember me
              </label>
            </div>
          </div>

    
        <!-- Submit button -->
        <button type="button" class="btn btn-primary btn-block mb-4">
          Sign in
        </button>

        <!-- Register buttons -->
        <div class="text-center text-light">
          <p>Not a member? <a href="#!">Register</a></p>
        </div>
      </form>
